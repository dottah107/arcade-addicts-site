<script>
(async () => {
  const { data: { session } } = await supabase.auth.getSession();
  if (!session) { location.href = "/login/"; return; }

  async function renderUploads(){
    try {
      const list = await AA.listMyUploads();
      const ul = document.getElementById('aaUploads'); ul.innerHTML = "";
      list.forEach(item => {
        const li = document.createElement('li');
        li.innerHTML = <a href="" target="_blank"></a>;
        ul.appendChild(li);
      });
    } catch(e) { console.error(e); }
  }

  document.getElementById('aaUploadBtn')?.addEventListener('click', async () => {
    const file = document.getElementById('aaFile').files[0];
    if (!file) return alert("Pick a file");
    document.getElementById('aaUploadStatus').textContent = "Uploading...";
    try {
      await AA.uploadContent(file, document.getElementById('aaTitle').value);
      document.getElementById('aaUploadStatus').textContent = "Uploaded!";
      document.getElementById('aaFile').value = "";
      document.getElementById('aaTitle').value = "";
      renderUploads();
    } catch(e) {
      console.error(e);
      document.getElementById('aaUploadStatus').textContent = e.message || "Upload failed";
    }
  });

  renderUploads();
})();
</script>
